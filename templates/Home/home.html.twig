 {% extends 'Layouts/layout.html.twig' %} {% block title %}Mr's Lab{% endblock %} {% block body %} {% include 'Layouts/navbar.html.twig'
%}
<section class="jumbotron text-center">
  {% include 'Components/top.html.twig' %}
</section>

<style>
.badge{
    width: 3rem;
    margin-right: 0.3rem;
    margin-top: 1rem;
    font-family: 'Encode Sans Expanded', sans-serif;
}
</style>

<div class="album py-5 bg-light" id="projects">
  <div class="container">
    <h1 class=" section-heading section-title text-center ">Some of my projects</h1>
    <div class="row">
      {% for project in projects|reverse %}
      <div class="col-md-4">
        <div class="card mb-4 box-shadow" style="min-height:29rem">
          <img class="card-img-top" src="{{project.image}}"
            alt="Card image cap">
          <div class="card-body">
            <p class="card-title" style="font-weight:bold;font-family: 'Encode Sans Expanded', sans-serif;">{{project.name}}</p>
            <p class="card-text">{{project.description|raw}}</p>
            <div class="d-flex justify-content-between align-items-center">
              <a href="{{project.link}}" class="btn btn-view btn-sm btn-outline-secondary btn-view">View</a>
            </div>
          </div>
        </div>
      </div>
      {% endfor %}
    </div>
  </div>
</div>

<section class="jumbotron text-center" id="skills">
  {% include 'Components/skills.html.twig' %}
</section>

<div class="album py-5 bg-light" id="roadmap">
  {% include 'Components/roadmap.html.twig' %}
</div>


</main>




